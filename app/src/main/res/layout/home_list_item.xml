<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/homeItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/homeItemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeItemTitle"
        android:layout_marginTop="10dp"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/homeItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/homeItemAuthor"
        android:layout_alignBottom="@+id/homeItemAuthor"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/homeItemAuthor"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/homeItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/homeItemType"
        android:layout_alignBottom="@+id/homeItemType"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/homeItemType"
        tools:text="TextView"/>
</RelativeLayout>
