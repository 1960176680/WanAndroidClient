<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/list_item_selector"
    android:padding="10dp">

    <TextView
        android:id="@+id/homeItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp"
        tools:text="标题"/>

    <TextView
        android:id="@+id/homeItemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeItemTitle"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/sp_16"
        tools:text="作者"/>

    <TextView
        android:id="@+id/homeItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/homeItemAuthor"
        android:layout_alignBottom="@+id/homeItemAuthor"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/homeItemAuthor"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/sp_16"
        tools:text="类型"/>

    <TextView
        android:id="@+id/homeItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/homeItemAuthor"
        android:layout_alignBottom="@+id/homeItemAuthor"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/secondary_text_light"
        tools:text="日期"/>
</RelativeLayout>